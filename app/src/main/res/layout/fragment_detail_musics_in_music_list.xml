<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#003399"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_fragment_detail_return"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/img_action_item_back"/>

        <TextView
            android:id="@+id/text_view_fragment_detail_current_catalogue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/image_view_fragment_detail_search_in_there"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/img_page_focused"/>

        <ImageView
            android:id="@+id/image_view_fragment_detail_menu_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/img_play_next"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <ListView
            android:id="@+id/list_view_fragment_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>