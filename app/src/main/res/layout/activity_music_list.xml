<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="720"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_music_list_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="#003399"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_view_music_list_music_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:scaleType="fitCenter"
            android:src="@drawable/img_default_music_picture_minor"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view_music_list_playing_music_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:text="@string/no_music"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/text_view_music_list_playing_music_singer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:text="@string/nothing"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/image_view_music_list_play_or_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:src="@drawable/img_play_1"/>
        <ImageView
            android:id="@+id/image_view_music_list_playing_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:src="@drawable/img_return_current_play"/>

    </LinearLayout>

</LinearLayout>